{
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn2-ami-hvm-*-gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "vpc_filter": {
      "filters": {
        "tag:Class": "build",
        "isDefault": "false"
      }
    },
    "subnet_filter": {
      "filters": {
        "tag:Class": "build"
      },
      "random": true
    },
    "associate_public_ip_address": true,
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "jaeger-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "jaeger/jaeger-collector.service",
      "destination": "/tmp/jaeger-collector.service"
    },
    {
      "type": "file",
      "source": "jaeger/jaeger-query.service",
      "destination": "/tmp/jaeger-query.service"
    },
    {
      "type": "file",
      "source": "jaeger/install.sh",
      "destination": "/tmp/install.sh"
    },
    {
      "type": "shell",
      "inline":[
        "sudo /tmp/install.sh"
      ]
    }
  ]
}