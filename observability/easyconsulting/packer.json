{
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "CentOS Linux 7 x86_64 HVM*",
        "root-device-type": "ebs"
      },
      "owners": ["aws-marketplace"],
      "most_recent": true
    },
    "vpc_filter": {
      "filters": {
        "tag:Soffy": "lz",
        "isDefault": "false"
      }
    },
    "subnet_filter": {
      "filters": {
        "tag:Soffy": "lz"
      },
      "random": true
    },
   "associate_public_ip_address": true,
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "easyconsulting-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sudo amazon-linux-extras install ansible2"]
    },
    {
      "type": "ansible-local",
      "playbook_file": "./easyconsulting/local.yml",
      "galaxy_file": "./easyconsulting/requirements.yml"
    }
  ]
}
